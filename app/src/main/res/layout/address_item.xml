<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/corner_radious"
        android:paddingBottom="10sp">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8sp">
                <TextView
                    android:id="@+id/tvAddress_Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ten nguoi dung"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvAddress_Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0987654321"
                    android:layout_marginStart="16sp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tvAddress_Kind"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Nhà "
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginBottom="20sp"
                    android:layout_marginEnd="8sp"
                    android:textColor="#3993FD"
                    android:layout_marginStart="8sp"
                    android:layout_marginTop="4sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvAddress_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" số nhà: 123"
                android:layout_marginStart="8sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/next"
            android:layout_gravity="center"
            android:layout_marginEnd="8sp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>