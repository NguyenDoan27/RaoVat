<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="image of product"
            android:src="@drawable/shose" />
        <TextView
            android:id="@+id/tvName_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shose"
            android:layout_marginHorizontal="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/tvPrice_Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1800000 đ"
                android:textSize="12dp"
                android:textColor="#EE5C5C"/>
            <TextView
                android:id="@+id/tvSold_Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đã bán: 29"
                android:gravity="right"
                android:textSize="12dp"
                android:textColor="#939393"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/location"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvLocation_Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ha Noi"
                android:textSize="12dp"
                android:textColor="#939393"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>