<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8sp"
    app:cardCornerRadius="8sp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="4sp">
            <ImageView
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:src="@drawable/store"
                android:layout_marginHorizontal="8sp"/>
            <TextView
                android:id="@+id/tvReserveNameShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="4sp">
                <ImageView
                    android:id="@+id/imgReserveProduct"
                    android:layout_width="142sp"
                    android:layout_height="100sp"
                    android:layout_marginHorizontal="8sp"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="12sp">
                <TextView
                    android:id="@+id/tvReserveNameProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giay the thao"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="4sp"
                    />
                <TextView
                    android:id="@+id/tvReservePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000Ä‘"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_marginVertical="4sp"
                    />
                <TextView
                    android:id="@+id/tvReserveQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="so luong : 1"
                    android:textSize="14sp"
                    android:layout_marginVertical="4sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>