<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4sp"
    app:cardBackgroundColor="@color/gray"
    android:layout_margin="4sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStoreConfirmProduct"
            android:layout_width="83sp"
            android:layout_height="110sp"
            android:layout_marginHorizontal="14sp"
            android:layout_marginVertical="20sp" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20sp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tvStoreConfirmProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teena san pham"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvStoreConfirmProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000d"
                android:paddingStart="4sp"
                android:textStyle="bold"
                android:textColor="#EE5C5C"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tvStoreConfirmProductAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="So luong: 1"
                android:paddingStart="10sp"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="10sp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStoreConfirmProductCancel"
                    android:layout_width="130sp"
                    android:layout_height="48sp"
                    android:text="Hủy"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10sp"
                    android:background="@drawable/cancel_button_background"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStoreConfirmProductAccess"
                    android:layout_width="130sp"
                    android:layout_height="48sp"
                    android:text="Xác nhận"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/access_button_background"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>