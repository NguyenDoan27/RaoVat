<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.StoreActivity"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="33dp"
            >
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/store"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvNameStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABC Shop"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tvPhoneStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09231564789"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/location"
                        android:layout_marginHorizontal="4dp"
                        app:tint="#808080" />
                    <TextView
                        android:id="@+id/tvLocationStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hà Nội"
                        android:textSize="12dp"
                        android:textColor="#808080"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:id="@+id/tlStore"
        android:background="@color/white"
        app:tabMode="scrollable"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2ContentStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>