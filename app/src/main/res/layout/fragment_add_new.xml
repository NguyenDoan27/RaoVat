<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_selected"
            android:gravity="center"
            android:id="@+id/layout_imgSelected0"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ảnh bìa"
                android:textColor="#1F86FF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/image_selected"
                android:gravity="center"
                android:id="@+id/layout_imgSelected1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ảnh bìa"
                    android:textColor="#1F86FF" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/image_selected"
                android:gravity="center"
                android:id="@+id/layout_imgSelected2"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ảnh bìa"
                    android:textColor="#1F86FF" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/image_selected"
                android:gravity="center"
                android:id="@+id/layout_imgSelected3"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ảnh bìa"
                    android:textColor="#1F86FF" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/image_selected"
                android:gravity="center"
                android:id="@+id/layout_imgSelected4"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img41"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ảnh bìa"
                    android:textColor="#1F86FF" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Tên sản phẩm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Gía mặc định">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edPriceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Chất liệu">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edMaterialProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Số lượng">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="number"
                android:id="@+id/edAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Xuất xứ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edOriginProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:hint="Thương hiệu">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edTradeMarkProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            app:hintAnimationEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edDescriptionProduct"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:gravity="top"
                android:hint="Mô tả"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/layoutSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/access_button_background"
            android:text="Lưu sản phẩm"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>